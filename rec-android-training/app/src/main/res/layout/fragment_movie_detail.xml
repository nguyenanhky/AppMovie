<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dimen_5dp"
    tools:context=".ui.movies.MovieDetailFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        app:cardCornerRadius="@dimen/dimen_8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/background_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgStar"
                android:layout_marginVertical="@dimen/dimen_5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@mipmap/ic_star_border_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/black"
                android:id="@+id/txtReleaseDate"
                android:layout_marginStart="@dimen/dimen_5dp"
                android:textSize="@dimen/dimen_12sp"
                android:text="@string/release_date"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/imgStar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtReleaseDateDetail"
                android:layout_marginStart="@dimen/dimen_5dp"
                android:textColor="@color/color_radio_button"
                android:textSize="@dimen/dimen_12sp"
                app:layout_constraintTop_toTopOf="@id/txtReleaseDate"
                app:layout_constraintStart_toEndOf="@id/txtReleaseDate"
                tools:text="2015-08-14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/black"
                android:id="@+id/txtRating"
                android:layout_marginStart="@dimen/dimen_5dp"
                android:textSize="@dimen/dimen_12sp"
                android:text="@string/rating"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/imgStar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtRatingDetail"
                android:layout_marginStart="@dimen/dimen_5dp"
                android:textColor="@color/color_radio_button"
                android:textSize="@dimen/dimen_12sp"
                app:layout_constraintTop_toTopOf="@id/txtRating"
                app:layout_constraintStart_toEndOf="@id/txtRating"
                tools:text="7.0/10.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_marginTop="@dimen/dimen_10dp"
        android:scaleType="fitXY"
        android:id="@+id/imgMovies"
        app:layout_constraintTop_toBottomOf="@id/cardView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="@dimen/dimen_140dp"
        android:layout_height="@dimen/dimen_140dp"/>

    <TextView
        android:id="@+id/txtOverview"
        android:layout_marginStart="@dimen/dimen_5dp"
        android:textStyle="bold|italic"
        android:textSize="14sp"
        android:textColor="@color/color_radio_button"
        app:layout_constraintTop_toTopOf="@id/imgMovies"
        app:layout_constraintStart_toEndOf="@id/imgMovies"
        android:text="@string/overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtOverviewDetail"
        android:layout_marginTop="2dp"
        android:layout_marginStart="@dimen/dimen_5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtOverview"
        app:layout_constraintStart_toEndOf="@id/imgMovies"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    
    <TextView
        android:id="@+id/btnReminder"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_16sp"
        android:background="@drawable/bg_button_edit"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_10dp"
        app:layout_constraintEnd_toEndOf="@id/imgMovies"
        app:layout_constraintStart_toStartOf="@id/imgMovies"
        app:layout_constraintTop_toBottomOf="@id/imgMovies"
        android:text="@string/reminder"
        android:layout_width="@dimen/dimen_100dp"
        android:layout_height="@dimen/dimen_50dp"/>

    <TextView
        android:id="@+id/txtCast"
        android:layout_marginTop="@dimen/dimen_10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnReminder"
        android:text="@string/cast_amp_crew"
        android:textStyle="bold|italic"
        android:textSize="14sp"
        android:textColor="@color/color_radio_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/dimen_8dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        app:layout_constraintTop_toBottomOf="@id/txtCast"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@color/background_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>